.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.chat-container {
  flex: 1;
  padding: 20px;
  overflow-y: auto;
}

.message {
  margin-bottom: 10px;
  padding: 10px;
  border-radius: 8px;
}

.message.user {
  background-color: #e3f2fd;
  align-self: flex-end;
}

.message.ai {
  background-color: #f5f5f5;
  align-self: flex-start;
}

.input-container {
  display: flex;
  padding: 10px;
  border-top: 1px solid #ddd;
}

.input-container input {
  flex: 1;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.input-container button {
  margin-left: 10px;
  padding: 8px 16px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 4px;
}

.recommendation {
  padding: 20px;
  background-color: #fff3e0;
  border-top: 1px solid #ddd;
}

.title {
  font-weight: bold;
  font-size: 16px;
}

.reason {
  margin: 10px 0;
  color: #666;
}

.nav-btn {
  background-color: #ff9800;
  color: white;
  padding: 10px;
  border-radius: 4px;
}