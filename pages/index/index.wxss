.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  min-height: 100vh;
  position: relative;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}
.content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 15px;
}
.btn {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  text-align: center;
  border-radius: 5px;
}