.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 100vh;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}
.content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}
.btn {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  text-align: center;
  border-radius: 5px;
}
.logo {
  width: 40px;
  height: 40px;
  margin-right: 10px;
}
.image-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
}

.button-image {
  width: 128px;
  height: 128px;
}