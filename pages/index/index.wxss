.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}
.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}
.content {
  display: flex;
  flex-direction: column;
  gap: 15px;
}
.btn {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  text-align: center;
  border-radius: 5px;
}