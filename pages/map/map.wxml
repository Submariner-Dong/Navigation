<view class="container">
  <view class="search-bar">
    <input placeholder="输入目标地址" bindinput="onInput" />
    <button bindtap="onSearch">搜索</button>
  </view>
  <map
    class="map"
    id="map"
    style="width: 100%; height: 300px;"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    markers="{{markers}}"
    scale="16"
    show-location
    bindmarkertap="onMarkerTap"
  ></map>
</view>