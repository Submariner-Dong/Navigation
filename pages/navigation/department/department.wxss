.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.department {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.step-info {
  font-size: 28rpx;
  color: #666;
}

.step-content, .options-content {
  background-color: white;
  border-radius: 15rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.step-image, .option-image {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.step-text {
  font-size: 32rpx;
  line-height: 1.6;
  text-align: center;
  color: #333;
}

.options-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 30rpx;
  transition: all 0.3s;
}

.option-item.selected {
  border-color: #007aff;
  background-color: #f0f8ff;
}

.option-text {
  font-size: 28rpx;
  line-height: 1.5;
  text-align: center;
  color: #333;
}

.navigation-controls {
  display: flex;
  gap: 20rpx;
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  transition: all 0.3s;
}

.prev-btn {
  background-color: #f0f0f0;
  color: #333;
}

.next-btn {
  background-color: #007aff;
  color: white;
}

.next-btn.disabled {
  background-color: #ccc;
  color: #999;
}